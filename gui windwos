import os
import sys

def run_term_tk():
    sys.path.append(os.path.join(sys.path[0],'../..'))
    import TermTk as ttk

    def demoWindowsFlags(root=None):
        frame = ttk.TTkFrame(parent=root, border=False)
        return frame

    def main():
        root = ttk.TTk()
        
        win1 = ttk.TTkWindow(parent=root, pos=(1, 1), size=(60, 30), title="Test Window 1", border=True, layout=ttk.TTkGridLayout(), flags=ttk.TTkK.NONE)
        demoWindowsFlags(win1)
    
        win2 = ttk.TTkWindow(parent=root, pos=(65, 1), size=(60, 30), title="Test Window 2", border=True, layout=ttk.TTkGridLayout(), flags=ttk.TTkK.NONE)
        demoWindowsFlags(win2)
    
        root.mainloop()

    if __name__ == "__main__":
        main()

# Fork and exec for the first process
pid1 = os.fork()
if pid1 == 0:  # Child process
    run_term_tk()
    sys.exit(0)  # Exit child process

# Fork and exec for the second process
pid2 = os.fork()
if pid2 == 0:  # Child process
    run_term_tk()
    sys.exit(0)  # Exit child process

# Parent process waits for both children to finish
os.waitpid(pid1, 0)
os.waitpid(pid2, 0)
